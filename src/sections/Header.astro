---
import IconLink from "../components/IconLink.astro";
import Section from "../layouts/Section.astro";
---

<Section sectionTitle="Hello!">
  <div class="headings">
    <header>
      <h2 class="i-am">I am <strong>Yonatan Ginsburg</strong>.</h2>
      <h3 class="i-enjoy">I enjoy making useful things.</h3>
    </header>
    <aside class="links">
      <IconLink
        class:list={"profile-link"}
        ionIconName="logo-github"
        label="GitHub"
        href="#"
      />
      <IconLink ionIconName="logo-linkedin" label="LinkedIn" href="#" />
    </aside>
  </div>
</Section>

<style>
  .headings {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
  header {
    grid-column: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .i-am,
  .i-enjoy {
    font-weight: var(--font-weight-normal);
  }
  .links {
    grid-column: 2;
    align-self: end;
    justify-self: center;
    display: flex;
    gap: 1.2rem;
  }
</style>
