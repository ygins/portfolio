---
import IonIconLink from "./IonIconLink.astro";
type IonIconInformation = {
  ionIconName: string;
  label: string;
  href: string;
};

interface Props {
  links: IonIconInformation[];
}

const { links } = Astro.props;
---

<div class="external-links">
  {
    links.map((it) => (
      <div>
        <IonIconLink
          label={it.label}
          href={it.href}
          ionIconName={it.ionIconName}
        />
      </div>
    ))
  }
</div>

<style>
  .external-links {
    display: flex;
    flex-direction: row-reverse;
    width: 100%;
    height: 24px;
    margin-left: auto;
    margin-right: 0;
  }
  .external-links div {
    width: 4.8rem;
  }
</style>
