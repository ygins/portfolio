---
import Link from "./Link.astro";

interface Props {
  label: string;
  ionIconName: string;
  href: string;
}

const { ionIconName, href, label } = Astro.props;
---

<Link href={href}>
  <ion-icon
    class="profile-link-icon"
    name={ionIconName}
    aria-label=`Link to ${label}`></ion-icon>
</Link>

<style>
  .profile-link-icon {
    height: 6.2rem;
    width: 6.2rem;
  }
</style>
