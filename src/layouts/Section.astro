---
interface Props {
  sectionTitle: string;
}
const { sectionTitle } = Astro.props;
---

<section class="container">
  <header class="heading-container">
    <h1>{sectionTitle}</h1>
  </header>
  <div class="content">
    <slot />
  </div>
</section>

<style>
  .container {
    max-width: 120rem;
    margin: 0 auto;
    padding: 3.2rem;
    background-color: white;
  }
  .heading-container {
    position: relative;
  }
  .heading-container::before {
    content: "";
    height: 100%;
    width: 1rem;
    background-color: #228be6;
    position: absolute;
    left: 0;
  }
  .content {
    margin-left: 13%;
  }
  h1 {
    margin-bottom: 3rem;
    margin-left: 13%;
  }
</style>
